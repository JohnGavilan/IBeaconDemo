<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Exhibitor.Mobile.MainForm">
  <StackLayout>
	<Label Text="" VerticalOptions="Center" HorizontalOptions="Center" />
  	<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
		<StackLayout.Padding>20, 20, 10, 10</StackLayout.Padding>
	  	<Button x:Name="btnStartListening" HorizontalOptions="Start" Text="Start Listening" VerticalOptions="Center"></Button>
	  	<Button x:Name="btnStopListening" HorizontalOptions="EndAndExpand" Text="Stop Listening" VerticalOptions="Center"></Button>
	</StackLayout>
	<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<Label Text="" x:Name="StatusLabel"  VerticalOptions="Center" HorizontalOptions="Center" />
		<WebView x:Name="MainWebView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ></WebView>
	</StackLayout>

  </StackLayout>
</ContentPage>